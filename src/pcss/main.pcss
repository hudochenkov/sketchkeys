.popup {
	position: fixed;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	opacity: 0;
	z-index: -2;
	transition: all 0.3s;

	&.active {
		opacity: 1;
		z-index: 100;

		.popup__content {
			-moz-transform: scale(1);
			-ms-transform: scale(1);
			-webkit-transform: scale(1);
			transform: scale(1);
		}

		.popup__back {
			opacity: 1;
		}
	}
}

.popup__back {
	position: fixed;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	opacity: 0;
	background: rgba(0, 0, 0, 0.8);
	transition: all 0.5s;
	transition-delay: 0.2s;
}

.popup__content {
	position: fixed;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	z-index: 2;
	overflow-y: auto;
	text-align: center;
	transform: scale(0.8);
	transition: all 0.3s;

	&:before {
		content: "";
		display: inline-block;
		height: 100%;
		vertical-align: middle;
	}

	@media (--palm) {
		width: 100%;
		padding: 0;

		&:before {
			display: none;
		}
	}
}

.popup__content__i {
	display: inline-block;
	vertical-align: middle;

	@media (--palm) {
		display: block;
		width: 100%;
	}
}

.popup__close {
	position: absolute;
	top: 24px;
	right: 24px;
	width: 20px;
	height: 20px;
	cursor: pointer;

	&:before, &:after {
		content: '';
		display: block;
		position: absolute;
		right: 0;
		width: 21px;
		height: 2px;
		background: #7f8c8d;
	}

	&:before {
		top: 6px;
		transform: rotate(45deg);
	}
	&:after {
		top: 6px;
		transform: rotate(-45deg);
	}
}

