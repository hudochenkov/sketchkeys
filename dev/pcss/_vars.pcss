$default-font: Avenir, Helvetica, Arial, sans-serif;
$default-color: #000;
$link-color: #0433ff;
$link-color--hover: #0027d1;

$gutter-size: 22px;
$column-size: 80px;

$transition-duration: 0.15s;

@lost gutter $gutter-size;

@custom-media --palm (width < 768px);
@custom-media --not-palm (768px <= width);
@custom-media --lap (768px <= width <= 1024px);
@custom-media --portable (width <= 1024px);
@custom-media --desk (1024px < width);
