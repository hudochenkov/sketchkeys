/** VARIABLES
===================================*/
$controls: 'images/controls.png';
$loader:   'images/bx_loader.gif';

/** RESET AND LAYOUT
===================================*/

.bx-wrapper {
	position: relative;
	margin: auto;
	padding: 0;
	touch-action: pan-y;

	@media (--not-palm) {
		/* Fix safari bug. Render issues on left side */
		&:before {
			position: absolute;
			top: 0;
			left: -1px;
			z-index: 1000000;
			display: block;
			width: 2px;
			height: 100%;
			background: #fff;
			content: "";
		}
	}

	img {
		display: block;
		max-width: 100%;
	}
}

.bxslider {
	margin: 0;
	padding: 0;
	list-style: none;
}

.bx-viewport {
	/*fix other elements on the page moving (on Chrome)*/
	-webkit-transform: translateZ(0);
}

