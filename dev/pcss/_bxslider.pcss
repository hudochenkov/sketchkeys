/* DIRECTION CONTROLS (NEXT / PREV) */
.bx-wrapper {
	.bx-controls-direction a {
		position: absolute;
		top: 0;
		bottom: 0;
		z-index: 9999;
		overflow: hidden;
		width: 100px;
		outline: 0;
		background: url("img/slider-arrow.svg") right 10px center no-repeat;
		/* background-color: rgba(#ccc, .6); */
		text-indent: 100%;
		white-space: nowrap;
		/* opacity: .5; */

		@media (--palm) {
			width: 44px;
		}

		&.disabled {
			display: none;
		}
		&:hover {
			/* opacity: 1; */
		}
	}
	&:hover {
		.bx-controls-direction a {
			opacity: 1;
		}
	}
	.bx-prev {
		left: 0;
		cursor: w-resize;
		transform: rotate(180deg);
	}
	.bx-next {
		right: 0;
		cursor: e-resize;
	}
}

